  "bugs": {
    "url": "https://github.com/thomasij813/board-game-score-keeper/issues"
  },
  "homepage": "https://github.com/thomasij813/board-game-score-keeper#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "mongoose": "^5.7.11",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "request": "^2.88.0",
    "request-promise": "^4.2.5",
    "xml2js": "^0.4.22"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
