    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.7.2",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.4",
    "postcss-cli": "^6.1.3",
    "postcss-loader": "^7.0.2",
    "style-loader": "^1.3.0",
    "tailwindcss": "^1.1.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
